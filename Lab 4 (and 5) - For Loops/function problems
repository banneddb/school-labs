total_bottles = (int(input("How many rounds of beers?")))
def bottlesofbeer(n):
    for bottles_left in range(total_bottles, 0, -1):
        print(bottles_left,"bottles of beer on the wall", bottles_left, "bottles of beer" )
        print("Take one down, pass it around", bottles_left-1, "bottles of beer on the wall")
bottlesofbeer(total_bottles)

n = int(input("What number do you want?"))
def thepowerof(n):
    total = 0
    for i in range(n):
        L = i+1
        total += L**2
        if L!=n:
            print(L**2, end=" + ")
        else:
            print(L**2, end=" = ")
    print(total)
thepowerof(n)

num = int(input("What is the integer for the multiplication table?"))

def multiplication_table(num):
    for row in range(1, num+1):
        for collum in range(1, num+1):
            print(row*collum, end="  ")
        print()

multiplication_table(num)